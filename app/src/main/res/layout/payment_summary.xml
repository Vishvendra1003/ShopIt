<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/ll_payment_summary_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/ll_payment_summary_amount_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            >

            <com.torrex.shopit.utils.TextViewBoldDesign
                android:id="@+id/tv_payment_summary_amount_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="@string/amount"
                android:textSize="@dimen/primary_text_size"
                android:textColor="@color/dark_gray"
                />

            <com.torrex.shopit.utils.TextViewBoldDesign
                android:id="@+id/tv_payment_summary_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="right"
                android:text="@string/amount"
                android:textSize="@dimen/primary_text_size"
                android:textColor="@color/dark_gray"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_payment_summary_upi_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            >
            <com.torrex.shopit.utils.TextViewBoldDesign
                android:id="@+id/tv_payment_summary_upi_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:textSize="@dimen/primary_text_size"
                android:textColor="@color/dark_gray"
                android:text="@string/upi"
                />


            <com.torrex.shopit.utils.TextViewBoldDesign
                android:id="@+id/tv_payment_summary_upi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="@dimen/primary_text_size"
                android:textColor="@color/dark_gray"
                android:text="@string/upi"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_payment_summary_description_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            >

            <com.torrex.shopit.utils.TextViewBoldDesign
                android:id="@+id/tv_payment_summary_description_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="@dimen/primary_text_size"
                android:textColor="@color/dark_gray"
                android:text="@string/description"/>

            <com.torrex.shopit.utils.TextViewBoldDesign
                android:id="@+id/tv_payment_summary_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="right"
                android:textSize="@dimen/primary_text_size"
                android:textColor="@color/dark_gray"
                android:text="@string/description"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_payment_summary_user_id_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            >
            <com.torrex.shopit.utils.TextViewBoldDesign
                android:id="@+id/tv_payment_summary_user_id_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="@dimen/primary_text_size"
                android:textColor="@color/dark_gray"
                android:text="@string/user_name_payment"/>

            <com.torrex.shopit.utils.TextViewBoldDesign
                android:id="@+id/tv_payment_summary_user_id_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="right"
                android:textSize="@dimen/primary_text_size"
                android:textColor="@color/dark_gray"
                android:text="@string/user_name_payment"/>

        </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_make_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_margin_top"
        android:padding="@dimen/primary_padding"
        android:text="Make Patyment"
        android:textSize="@dimen/primary_text_size"
        android:textColor="@color/white"
        android:background="@drawable/button_background"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_payment_summary_detail"
        />

</androidx.constraintlayout.widget.ConstraintLayout>